<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="@drawable/background1">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#006F7474"
        android:backgroundTint="#006F7474"
        android:backgroundTintMode="src_in"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        tools:ignore="MissingConstraints">


        <ImageButton
            android:id="@+id/botonJugar"
            android:layout_width="325dp"
            android:layout_height="125dp"
            android:layout_marginBottom="7dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/app_name"
            android:onClick="ejecutarJuego"
            android:src="@drawable/play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/botonAnt"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:width="50dp"
                android:height="40dp"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:onClick="anterior"
                android:src="@drawable/flechaizq" />

            <ImageView
                android:id="@+id/vistaModo"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:width="170dp"
                android:height="40dp"
                android:background="#00FFFFFF"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/botonSig"
                android:layout_width="82dp"
                android:layout_height="71dp"
                android:layout_marginBottom="7dp"
                android:width="50dp"
                android:height="40dp"
                android:background="#00FFFFFF"
                android:gravity="center"
                android:onClick="siguiente"
                android:src="@drawable/flechader" />

        </LinearLayout>


        <ImageButton
            android:id="@+id/botonConfiguracion"
            android:layout_width="325dp"
            android:layout_height="125dp"
            android:layout_marginLeft="175dp"
            android:layout_marginRight="175dp"
            android:layout_marginBottom="7dp"
            android:background="#00FFFFFF"
            android:onClick="ejecutarOpciones"
            android:src="@drawable/config" />

        <ImageButton
            android:id="@+id/botonRanking"
            android:layout_width="325dp"
            android:layout_height="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="125dp"
            android:layout_marginBottom="7dp"
            android:background="#00FFFFFF"
            android:onClick="ejecutarRanking"
            android:src="@drawable/ranking" />

        <ImageButton
            android:id="@+id/botonSalir"
            android:layout_width="325dp"
            android:layout_height="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="125dp"
            android:layout_marginBottom="7dp"
            android:background="#00FFFFFF"
            android:onClick="ejecutarSalir"
            android:src="@drawable/exit" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
